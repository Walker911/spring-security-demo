<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.walker.security.mapper.RoleMapper">
    <select id="queryRolesByUserId" resultType="com.walker.security.model.Role">
      SELECT
		a.id,
		a.name
	  FROM
		role a
	  INNER JOIN user_role b ON a.id = b.role_id
	  WHERE
		b.user_id = #{userId};
    </select>
</mapper>